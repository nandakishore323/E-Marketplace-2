<div class="comments mb-5">
  <h4 class="my-3 p-4 text-white bg-success">Product Questions & Answers</h4>
  <hr>

  <p>
    <%= @product.comments.count %> Questions Asked...</p>
  <%= render @product.comments %>

  <hr>
  <% if current_user != @product.user %>
  <p class="lead">Ask a Question:</p>
  <%= render 'comments/form' %>
</div>
<% end %>
