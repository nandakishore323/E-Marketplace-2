<div class="mt-3">
  <%= form_for :reply, url: create_reply_path({product_id: product_id, comment_id: comment_id}) do |f| %>
    <p>
      <%= f.text_area :reply_body, class: 'form-control', placeholder: 'Type your reply here' %>
    </p>
    <p>
      <%= f.submit 'Reply', class: 'btn btn-warning' %>
    </p>
  <% end %>
</div>
